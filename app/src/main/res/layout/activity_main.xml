<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/helloName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello ,"
        android:textSize="14dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textStyle="italic"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Calculator"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/getNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter 1st Number"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textSize="16dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/getNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter 2nd Number"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result: "
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:gravity="right"
        android:id="@+id/resultText"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/color5"
                android:onClick="addition"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="28dp"></Button>

            <Button
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="70dp"
                android:layout_width="115dp"
                android:layout_weight="1"
                android:text="â€“"
                android:backgroundTint="@color/color1"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:onClick="subtraction">
            </Button>

            <Button
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_weight="1"
                android:text="x"
                android:textAllCaps="false"
                android:backgroundTint="@color/color2"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:onClick="multiplication">
            </Button>

            <Button
                android:layout_marginRight="50dp"
                android:layout_marginLeft="10dp"
                android:layout_height="70dp"
                android:layout_width="115dp"
                android:layout_weight="1"
                android:text="/"
                android:backgroundTint="@color/color3"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:onClick="division">
            </Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="5dp"
                android:layout_marginLeft="50dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="Modulus"
                android:textAllCaps="false"
                android:onClick="modulus"
                android:backgroundTint="@color/color5"
                android:textColor="@color/white"
                android:textSize="18dp">
            </Button>

            <Button
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_weight="1"
                android:text="pow"
                android:backgroundTint="@color/color1"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:onClick="power">
            </Button>

            <Button
                android:layout_marginRight="50dp"
                android:layout_marginLeft="5dp"
                android:layout_height="70dp"
                android:layout_width="90dp"
                android:layout_weight="1"
                android:text="%"
                android:textAllCaps="false"
                android:backgroundTint="@color/color2"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:onClick="percentage">
            </Button>

        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_weight="1"
                android:text="Clear"
                android:textAllCaps="false"
                android:backgroundTint="@color/color2"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:onClick="clear">
            </Button>

        </TableRow>

    </TableLayout>


</LinearLayout>